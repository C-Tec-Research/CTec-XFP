                                <ctc:Icon IconType="OpenFile" Width="20" Height="20" Foreground="Green" Margin="5,0,0,0"/>
                                <ctc:Icon IconType="Options" Width="20" Height="20" Foreground="Green" Margin="5,0,0,0"/>
