<Window x:Class="DocxReaderApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DOCX Reader" WindowState="Maximized">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Open file..." Click="OnOpenFileClicked"/>
            <MenuItem Header="_About" Click="OnAboutClicked"/>
        </Menu>
        <FlowDocumentReader x:Name="flowDocumentReader" ViewingMode="TwoPage" />
    </DockPanel>
</Window>
