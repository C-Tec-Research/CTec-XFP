                            <TextBlock Grid.Row="5" Grid.Column="0" Text="{Binding Path=Occurs_At,   Source={StaticResource Resources}}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,3,3"/>

                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding TimerHeaders[0]}"  HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
