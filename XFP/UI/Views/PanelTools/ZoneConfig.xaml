<Page x:Class="Xfp.UI.Views.PanelTools.ZoneConfig"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Xfp.UI.Views.PanelTools"
      xmlns:ctc="clr-namespace:CTecControls.UI;assembly=CTecControls" 
      xmlns:ctce="clr-namespace:CTecControls.UI.Extensions;assembly=CTecControls"
      xmlns:ctcb="clr-namespace:CTecControls.UI.Behaviours;assembly=CTecControls" 
      xmlns:ctcvh="clr-namespace:CTecControls.UI.ViewHelpers;assembly=CTecControls"
      xmlns:val="clr-namespace:Xfp.UI.Validation"
      xmlns:viewmodels="clr-namespace:Xfp.ViewModels.PanelTools" 
      xmlns:vh="clr-namespace:Xfp.UI.ViewHelpers"
      xmlns:printing="clr-namespace:System.Drawing.Printing;assembly=System.Drawing"
      d:DataContext="{d:DesignInstance Type=viewmodels:ZoneConfigViewModel}"
      mc:Ignorable="d"
      KeyDown="Page_KeyDown"
      Title="ZoneConfig">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <ctcvh:BoolToVisibilityHiddenConverter x:Key="BoolToVisibilityHiddenConverter"/>
        <ctcvh:InverseBoolToVisibilityHiddenConverter x:Key="InverseBoolToVisibilityHiddenConverter"/>
        <ctcvh:BoolToInverseConverter x:Key="BoolToInverseConverter"/>
        <ctcvh:IsNullToVisibilityConverter x:Key="IsNullToVisibilityConverter"/>
        <ctcvh:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <ctcvh:InverseBoolToErrorBrushConverter x:Key="InverseBoolToErrorBrushConverter"/>
        <ctcvh:InverseBoolToErrorBgBrushConverter x:Key="InverseBoolToErrorBgBrushConverter"/>
        <ctcvh:GreaterThanOneToVisibilityConverter x:Key="GreaterThanOneToVisibilityConverter"/>
        <ctcvh:BoolToOpacity40pcConverter x:Key="BoolToOpacity40pcConverter"/>
        <ctcvh:InverseBoolToOpacity40pcConverter x:Key="InverseBoolToOpacity40pcConverter"/>
        <ctcvh:IsNullOrWhiteSpaceToBoolConverter x:Key="IsNullOrWhiteSpaceToBoolConverter"/>
        <ctcvh:IsNullOrWhiteSpaceToOpacityConverter x:Key="IsNullOrWhiteSpaceToOpacityConverter"/>
        <ctcvh:IsNullOrWhiteSpaceToErrorColourConverter x:Key="IsNullOrWhiteSpaceToErrorColourConverter"/>
        <ctcvh:IsTrueToSVGPathDataConverter x:Key="IsTrueToSVGPathDataConverter"/>
        <ctcvh:IsNullOrWhiteSpaceToVisibilityConverter x:Key="IsNullOrWhiteSpaceToVisibilityConverter"/>
        <ctcvh:IsNotNullOrWhiteSpaceToVisibilityConverter x:Key="IsNotNullOrWhiteSpaceToVisibilityConverter"/>
        <vh:IndexToZoneNameConverter x:Key="IndexToZoneNameConverter"/>
        <vh:IndexToPanelNameConverter x:Key="IndexToPanelNameConverter"/>

        <Style x:Key="CellTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource DataGridTextBox}">
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="true">
                    <Setter Property="ToolTip"
                            Value="{Binding RelativeSource={RelativeSource Self},
                            Path=(Validation.Errors)[0].ErrorContent}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CellTimePickerStyle" TargetType="ctc:TimePicker">
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="true">
                    <Setter Property="ToolTip"
                            Value="{Binding RelativeSource={RelativeSource Self},
                            Path=(Validation.Errors)[0].ErrorContent}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CellCheckBoxStyle" TargetType="CheckBox">
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="true">
                    <Setter Property="ToolTip"
                            Value="{Binding RelativeSource={RelativeSource Self},
                            Path=(Validation.Errors)[0].ErrorContent}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <ControlTemplate x:Key="VerticalScrollBar" TargetType="{x:Type ScrollBar}">
            <Track x:Name="PART_Track" 
                   IsDirectionReversed="True"
                   ViewportSize="NaN"
                   Margin="0,14,0,0" 
                   Width="20">
                <Track.Thumb>
                    <Thumb Style="{StaticResource ScrollBarThumb}" MinHeight="30" Margin="0,1,9,3.5">
                        <Thumb.BorderBrush>
                            <SolidColorBrush Color="{StaticResource ColourScrollBarThumb}"/>
                        </Thumb.BorderBrush>
                        <Thumb.Background>
                            <SolidColorBrush Color="{StaticResource ColourScrollBarThumb}"/>
                        </Thumb.Background>
                    </Thumb>
                </Track.Thumb>
            </Track>
        </ControlTemplate>
        <Style TargetType="{x:Type ScrollBar}">
            <Setter Property="Stylus.IsPressAndHoldEnabled" Value="false"/>
            <Setter Property="Stylus.IsFlicksEnabled" Value="false"/>
            <Setter Property="Width" Value="14"/>
            <Setter Property="Margin" Value="-14,-14,-8,-2" />
            <Setter Property="MinWidth" Value="{Binding Width, RelativeSource={RelativeSource Self}}"/>
            <Setter Property="MinHeight" Value="{Binding Height, RelativeSource={RelativeSource Self}}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid x:Name="Bg" SnapsToDevicePixels="true">
                            <Border Padding="0 4">
                                <Track x:Name="PART_Track"
                                       IsDirectionReversed="true"
                                       IsEnabled="{TemplateBinding IsMouseOver}"
                                       Width="10"
                                       HorizontalAlignment="Center" >
                                    <Track.Thumb>
                                        <Thumb Style="{StaticResource ScrollBarThumb}"/>
                                    </Track.Thumb>
                                </Track>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="Orientation" Value="Horizontal">
                    <Setter Property="Width" Value="Auto" />
                    <Setter Property="Height" Value="14" />
                    <Setter Property="Template" Value="{StaticResource HorizontalScrollBar}" />
                </Trigger>
                <Trigger Property="Orientation" Value="Vertical">
                    <Setter Property="Width" Value="18" />
                    <Setter Property="Height" Value="Auto" />
                    <Setter Property="Template" Value="{StaticResource VerticalScrollBar}" />
                </Trigger>
            </Style.Triggers>
        </Style>

    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Auto">
        <Grid Margin="10,5,0,0">

            <Grid Margin="0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="{Binding PageHeader}" Style="{StaticResource PageTitle}"/>


                <!--#region input delay + investigation period-->
                <WrapPanel Grid.Row="1" Grid.Column="0">
                    <Border Style="{StaticResource InputPanelBorder}" Margin="0,0,0,5" Padding="20,5,20,8" VerticalAlignment="Top">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Path=Input_Delay, Source={StaticResource Resources}}"/>
                            <Border BorderThickness="1" CornerRadius="3" BorderBrush="{Binding DelayTotalIsValid, Converter={StaticResource InverseBoolToErrorBrushConverter}}" Margin="0,0,2,0">
                                <ctc:TimePicker x:Name="tpInputDelay" Value="{Binding InputDelay}" Format="mm:ss" SecondsIncrement="30" MaxValue="5:00" PreviewKeyDown="ctrl_PreviewKeyDown" PreviewMouseDown="ctrl_PreviewMouseDown" PreviewMouseWheel="ctrl_PreviewMouseWheel" Margin="0,1,0,0"/>
                            </Border>
                            <TextBlock Text="{Binding Path=Minutes_Short, Source={StaticResource Resources}}" Margin="0,0,20,0"/>
                            <TextBlock Text="{Binding Path=Investigation_Period, Source={StaticResource Resources}}"/>
                            <ctc:TimePicker x:Name="tpInvestigationPeriod" Value="{Binding InvestigationPeriod}" Format="mm:ss" SecondsIncrement="30" MaxValue="10:00" PreviewKeyDown="ctrl_PreviewKeyDown" PreviewMouseDown="ctrl_PreviewMouseDown" PreviewMouseWheel="ctrl_PreviewMouseWheel" Margin="1,2,3,0"/>
                            <TextBlock Text="{Binding Path=Minutes_Short, Source={StaticResource Resources}}"/>
                        </StackPanel>
                    </Border>
                </WrapPanel>
                <!--#endregion-->


                <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,5,0,5" VerticalAlignment="Top">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!--#region zones data grid-->
                    <DataGrid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Grid.RowSpan="2" x:Name="grdZoneConfig"
                              ItemsSource="{Binding ZoneConfigItems, BindsDirectlyToSource=True}" 
                              ctce:DataGridListBoxExtender.SelectedItems="{Binding SelectedItems}" 
                              SelectedItem="{Binding SelectedZone}" 
                              AlternatingRowBackground="{StaticResource GridAlternatingRowBackground}"
                              Background="{StaticResource GridBackground}"
                              GridLinesVisibility="None"
                              SelectionMode="Extended" 
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserSortColumns="False"
                              GotFocus="ZoneGrid_GotFocus"
                              SelectionChanged="ZoneGrid_SelectionChanged"
                              SizeChanged="grdZoneConfig_SizeChanged">

                        <DataGrid.Columns>

                            <!--#region zone/panel number-->
                            <DataGridTemplateColumn IsReadOnly="True">
                                <DataGridTemplateColumn.Header>
                                    <TextBlock Text="{Binding Path=Number_Symbol, Source={StaticResource Resources}}" Foreground="{StaticResource Brush10}" VerticalAlignment="Bottom"/>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="{StaticResource Brush02}"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="FontSize" Value="11"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Right"/>
                                        <Setter Property="Margin" Value="5,0,3,2"/>
                                        <Setter Property="VerticalAlignment" Value="Bottom"/>
                                        <Setter Property="VerticalContentAlignment" Value="Bottom"/>
                                    </Style>
                                </DataGridTemplateColumn.HeaderStyle>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Label Content="{Binding ZoneNum}"
                                                   HorizontalAlignment="Right" 
                                                   Opacity="0.7" Margin="5,2,3,0" Padding="0"/>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <!--#endregion-->

                            <!--#region zone/panel desc-->
                            <DataGridTemplateColumn Width="Auto">
                                <DataGridTemplateColumn.Header>
                                    <TextBlock Text="{Binding Path=Description, Source={StaticResource Resources}}" Foreground="{StaticResource Brush10}" TextAlignment="Left"/>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="{StaticResource Brush02}"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="FontSize" Value="11"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                        <Setter Property="Margin" Value="1,0,1,2"/>
                                        <Setter Property="VerticalContentAlignment" Value="Bottom"/>
                                    </Style>
                                </DataGridTemplateColumn.HeaderStyle>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="{Binding ZoneDescIsValid, Converter={StaticResource InverseBoolToErrorBrushConverter}}" 
                                                BorderThickness="1" CornerRadius="0" 
                                                Padding="0" Margin="-2,0,-1,0">
                                            <Grid HorizontalAlignment="Left" Margin="0">
                                                <TextBlock Text="{Binding ZoneDesc}" TextWrapping="NoWrap" Visibility="{Binding ZoneDesc, Converter={StaticResource IsNullOrWhiteSpaceToVisibilityConverter}}" Margin="1,0,1,0"/>
                                                <TextBlock Text="{Binding ZoneDescFull}" TextWrapping="NoWrap" Visibility="{Binding ZoneDesc, Converter={StaticResource IsNotNullOrWhiteSpaceToVisibilityConverter}}" Margin="1,0,1,0"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <!--#endregion-->

                            <!--#region sounders-->
                            <DataGridTemplateColumn Width="Auto">
                                <DataGridTemplateColumn.Header>
                                    <TextBlock Text="{Binding Path=Sounders, Source={StaticResource Resources}}" Foreground="{StaticResource Brush10}" TextAlignment="Center"/>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="{StaticResource Brush02}"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="FontSize" Value="11"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        <Setter Property="Margin" Value="1,0,1,2"/>
                                        <Setter Property="VerticalContentAlignment" Value="Bottom"/>
                                    </Style>
                                </DataGridTemplateColumn.HeaderStyle>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="{Binding DelayTotalIsValid, Converter={StaticResource InverseBoolToErrorBrushConverter}}" 
                                                BorderThickness="1,1,0,1" CornerRadius="3,0,0,3"
                                                Padding="0" Margin="5,0,-1,0">
                                            <Border BorderBrush="{Binding SounderDelayIsValid, Converter={StaticResource InverseBoolToErrorBrushConverter}}" 
                                                    BorderThickness="1" CornerRadius="0" 
                                                    HorizontalAlignment="Center" Padding="2,0,0,0" Margin="-2,0.25,0,0.25">
                                                <TextBlock Text="{Binding SounderDelayTime}" HorizontalAlignment="Right"/>
                                            </Border>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <!--#endregion-->

                            <!--#region relay 1-->
                            <DataGridTemplateColumn Width="Auto">
                                <DataGridTemplateColumn.Header>
                                    <TextBlock Text="{Binding Path=Relay_1, Source={StaticResource Resources}}" Foreground="{StaticResource Brush10}" TextAlignment="Center"/>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="{StaticResource Brush02}"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="FontSize" Value="11"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        <Setter Property="Margin" Value="1,0,1,2"/>
                                        <Setter Property="VerticalContentAlignment" Value="Bottom"/>
                                    </Style>
                                </DataGridTemplateColumn.HeaderStyle>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="{Binding DelayTotalIsValid, Converter={StaticResource InverseBoolToErrorBrushConverter}}" 
                                                BorderThickness="0,1,0,1" CornerRadius="0" 
                                                Padding="0" Margin="-5,0,-1,0">
                                            <Border BorderBrush="{Binding Relay1DelayIsValid, Converter={StaticResource InverseBoolToErrorBrushConverter}}" 
                                                    BorderThickness="1" CornerRadius="0" 
                                                    HorizontalAlignment="Center" Padding="2,0,0,0" Margin="0,0.25,0,0.25">
                                                <TextBlock Text="{Binding Relay1DelayTime}" HorizontalAlignment="Right"/>
                                            </Border>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <!--#endregion-->

                            <!--#region relay 2-->
                            <DataGridTemplateColumn Width="Auto">
                                <DataGridTemplateColumn.Header>
                                    <TextBlock Text="{Binding Path=Relay_2, Source={StaticResource Resources}}" Foreground="{StaticResource Brush10}" TextAlignment="Center"/>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="{StaticResource Brush02}"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="FontSize" Value="11"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        <Setter Property="Margin" Value="1,0,1,2"/>
                                        <Setter Property="VerticalContentAlignment" Value="Bottom"/>
                                    </Style>
                                </DataGridTemplateColumn.HeaderStyle>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="{Binding DelayTotalIsValid, Converter={StaticResource InverseBoolToErrorBrushConverter}}" 
                                                BorderThickness="0,1,0,1" CornerRadius="0" 
                                                Padding="0" Margin="-1,0,-1,0">
                                            <Border BorderBrush="{Binding Relay2DelayIsValid, Converter={StaticResource InverseBoolToErrorBrushConverter}}" 
                                                    BorderThickness="1" CornerRadius="0" 
                                                    HorizontalAlignment="Center" Padding="2,0,0,0" Margin="0,0.25,0,0.25">
                                                <TextBlock Text="{Binding Relay2DelayTime}" HorizontalAlignment="Right"/>
                                            </Border>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <!--#endregion-->

                            <!--#region outputs-->
                            <DataGridTemplateColumn Width="Auto">
                                <DataGridTemplateColumn.Header>
                                    <TextBlock Text="{Binding Path=Outputs, Source={StaticResource Resources}}" Foreground="{StaticResource Brush10}" TextAlignment="Center"/>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="{StaticResource Brush02}"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="FontSize" Value="11"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        <Setter Property="Margin" Value="1,0,1,2"/>
                                        <Setter Property="VerticalContentAlignment" Value="Bottom"/>
                                    </Style>
                                </DataGridTemplateColumn.HeaderStyle>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="{Binding DelayTotalIsValid, Converter={StaticResource InverseBoolToErrorBrushConverter}}" 
                                                BorderThickness="0,1,1,1" CornerRadius="0,3,3,0" 
                                                Padding="0" Margin="-3,0,0,0">
                                            <Border BorderBrush="{Binding RemoteDelayIsValid, Converter={StaticResource InverseBoolToErrorBrushConverter}}" 
                                                    BorderThickness="1" CornerRadius="0" 
                                                    HorizontalAlignment="Center" Padding="2,0,0,0" Margin="0,0.25,0,0.25">
                                                <TextBlock Text="{Binding RemoteDelayTime}" HorizontalAlignment="Right"/>
                                            </Border>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <!--#endregion-->

                            <!--#region detectors-->
                            <DataGridTemplateColumn Width="Auto">
                                <DataGridTemplateColumn.Header>
                                    <TextBlock Text="{Binding Path=Detectors, Source={StaticResource Resources}}" Foreground="{StaticResource Brush10}" TextAlignment="Center"/>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="{StaticResource Brush02}"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="FontSize" Value="11"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        <Setter Property="Margin" Value="5,0,3,2"/>
                                        <Setter Property="VerticalContentAlignment" Value="Bottom"/>
                                    </Style>
                                </DataGridTemplateColumn.HeaderStyle>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid Width="10" Height="10">
                                            <Path Fill="{StaticResource Brush03}" Stretch="Fill" 
                                                  Data="{Binding Detectors, Converter={StaticResource IsTrueToSVGPathDataConverter}}"
                                                  Visibility="{Binding IsPanelData, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                            <TextBlock Text="-" HorizontalAlignment="Center" Visibility="{Binding IsPanelData, Converter={StaticResource BoolToVisibilityConverter}}" Margin="0"/>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <!--#endregion-->

                            <!--#region mcps-->
                            <DataGridTemplateColumn Width="Auto">
                                <DataGridTemplateColumn.Header>
                                    <TextBlock Text="{Binding Path=MCPs, Source={StaticResource Resources}}" Foreground="{StaticResource Brush10}" TextAlignment="Center"/>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="{StaticResource Brush02}"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="FontSize" Value="11"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        <Setter Property="Margin" Value="0,0,3,2"/>
                                        <Setter Property="VerticalContentAlignment" Value="Bottom"/>
                                    </Style>
                                </DataGridTemplateColumn.HeaderStyle>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid Width="10" Height="10">
                                            <Path Fill="{StaticResource Brush03}" Stretch="Fill" 
                                                  Data="{Binding MCPs, Converter={StaticResource IsTrueToSVGPathDataConverter}}"
                                                  Visibility="{Binding IsPanelData, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                            <TextBlock Text="-" HorizontalAlignment="Center" Visibility="{Binding IsPanelData, Converter={StaticResource BoolToVisibilityConverter}}" Margin="0"/>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <!--#endregion-->

                            <!--#region multiple alarms end delays-->
                            <DataGridTemplateColumn Width="Auto">
                                <DataGridTemplateColumn.Header>
                                    <TextBlock Text="{Binding Path=Multiple_Alarms_End_Delays, Source={StaticResource Resources}}" Foreground="{StaticResource Brush10}" TextAlignment="Center"/>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="{StaticResource Brush02}"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="FontSize" Value="10"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="Margin" Value="0,0,0,3"/>
                                        <Setter Property="MaxWidth" Value="80"/>
                                        <Setter Property="VerticalContentAlignment" Value="Bottom"/>
                                    </Style>
                                </DataGridTemplateColumn.HeaderStyle>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid Width="10" Height="10" Margin="-10,0,0,0">
                                            <Path Fill="{StaticResource Brush03}" Stretch="Fill" 
                                                  Data="{Binding EndDelays, Converter={StaticResource IsTrueToSVGPathDataConverter}}"
                                                  Visibility="{Binding IsPanelData, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                            <TextBlock Text="-" HorizontalAlignment="Center" Visibility="{Binding IsPanelData, Converter={StaticResource BoolToVisibilityConverter}}" Margin="0"/>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <!--#endregion-->

                            <!--#region day option-->
                            <DataGridTemplateColumn Width="Auto">
                                <DataGridTemplateColumn.Header>
                                    <TextBlock Text="{Binding Path=Option, Source={StaticResource Resources}}" Foreground="{StaticResource Brush10}" TextAlignment="Left"/>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="{StaticResource Brush02}"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="FontSize" Value="11"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                        <Setter Property="Margin" Value="0,0,3,2"/>
                                        <Setter Property="VerticalContentAlignment" Value="Bottom"/>
                                    </Style>
                                </DataGridTemplateColumn.HeaderStyle>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Border BorderBrush="{Binding DayDependencyIsValid, Converter={StaticResource InverseBoolToErrorBrushConverter}}" BorderThickness="1"
                                                    Visibility="{Binding IsPanelData, Converter={StaticResource InverseBoolToVisibilityConverter}}" 
                                                    Margin="-7,0,0,0" Padding="2">
                                                <TextBlock Text="{Binding DayDependency}" Margin="3,0,3,0"/>
                                            </Border>
                                            <TextBlock Text="--" HorizontalAlignment="Left" Visibility="{Binding IsPanelData, Converter={StaticResource BoolToVisibilityConverter}}" Margin="10,0,0,0"/>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <!--#endregion-->

                            <!--#region day detector reset-->
                            <DataGridTemplateColumn Width="Auto">
                                <DataGridTemplateColumn.Header>
                                    <TextBlock Text="{Binding Path=Detector, Source={StaticResource Resources}}" Foreground="{StaticResource Brush10}" TextAlignment="Left"/>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="{StaticResource Brush02}"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="FontSize" Value="11"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        <Setter Property="Margin" Value="-5,0,0,2"/>
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="VerticalContentAlignment" Value="Bottom"/>
                                    </Style>
                                </DataGridTemplateColumn.HeaderStyle>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Border Grid.Row="3" Grid.Column="1" 
                                                    BorderBrush="{Binding DayDetectorResetIsValid, Converter={StaticResource InverseBoolToErrorBrushConverter}}" BorderThickness="1"
                                                    Visibility="{Binding IsPanelData, Converter={StaticResource InverseBoolToVisibilityConverter}}" 
                                                    Margin="0" Padding="2">
                                                <Grid HorizontalAlignment="Center" Width="34" Margin="0,0,0,0">
                                                    <TextBlock Text="{Binding DayDetectorResetTime}" HorizontalAlignment="Right"
                                                           Visibility="{Binding ShowDayDetectorReset, Converter={StaticResource BoolToVisibilityHiddenConverter}}"/>
                                                    <TextBlock Text="-" HorizontalAlignment="Right" Visibility="{Binding ShowDayDetectorReset, Converter={StaticResource InverseBoolToVisibilityHiddenConverter}}" Margin="0,0,15,0"/>
                                                </Grid>
                                            </Border>
                                            <TextBlock Text="-" HorizontalAlignment="Right" Visibility="{Binding IsPanelData, Converter={StaticResource BoolToVisibilityConverter}}" Margin="0,0,20,0"/>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <!--#endregion-->

                            <!--#region day alarm reset-->
                            <DataGridTemplateColumn Width="Auto">
                                <DataGridTemplateColumn.Header>
                                    <TextBlock Text="{Binding Path=Alarm, Source={StaticResource Resources}}" Foreground="{StaticResource Brush10}" TextAlignment="Left"/>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="{StaticResource Brush02}"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="FontSize" Value="11"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        <Setter Property="Margin" Value="5,0,3,2"/>
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="VerticalContentAlignment" Value="Bottom"/>
                                    </Style>
                                </DataGridTemplateColumn.HeaderStyle>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Border Grid.Row="3" Grid.Column="1" 
                                                    BorderBrush="{Binding DayAlarmResetIsValid, Converter={StaticResource InverseBoolToErrorBrushConverter}}" BorderThickness="1"
                                                    Visibility="{Binding IsPanelData, Converter={StaticResource InverseBoolToVisibilityConverter}}" 
                                                    Margin="0" Padding="2">
                                                <Grid HorizontalAlignment="Center" Width="34" Margin="0,0,0,0">
                                                    <TextBlock Text="{Binding DayAlarmResetTime}" HorizontalAlignment="Right" Visibility="{Binding ShowDayAlarmReset, Converter={StaticResource BoolToVisibilityHiddenConverter}}"/>
                                                    <TextBlock Text="-" HorizontalAlignment="Right" Visibility="{Binding ShowDayAlarmReset, Converter={StaticResource InverseBoolToVisibilityHiddenConverter}}" Margin="0,0,15,0"/>
                                                </Grid>
                                            </Border>
                                            <TextBlock Text="-" HorizontalAlignment="Right" Visibility="{Binding IsPanelData, Converter={StaticResource BoolToVisibilityConverter}}" Margin="0,0,20,0"/>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <!--#endregion-->

                            <!--#region night option-->
                            <DataGridTemplateColumn Width="Auto">
                                <DataGridTemplateColumn.Header>
                                    <TextBlock Text="{Binding Path=Option, Source={StaticResource Resources}}" Foreground="{StaticResource Brush10}" TextAlignment="Left"/>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="{StaticResource Brush02}"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="FontSize" Value="11"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                        <Setter Property="Margin" Value="10,0,3,2"/>
                                        <Setter Property="VerticalContentAlignment" Value="Bottom"/>
                                    </Style>
                                </DataGridTemplateColumn.HeaderStyle>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Border Grid.Row="3" Grid.Column="1" 
                                                    BorderBrush="{Binding NightDependencyIsValid, Converter={StaticResource InverseBoolToErrorBrushConverter}}" BorderThickness="1"
                                                    Visibility="{Binding IsPanelData, Converter={StaticResource InverseBoolToVisibilityConverter}}" 
                                                    Margin="3,0,0,0" Padding="2">
                                                <TextBlock Text="{Binding NightDependency}" Margin="2,0,2,0"/>
                                            </Border>
                                            <TextBlock Text="--" HorizontalAlignment="Left" Visibility="{Binding IsPanelData, Converter={StaticResource BoolToVisibilityConverter}}" Margin="20,0,0,0"/>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <!--#endregion-->

                            <!--#region night detector reset-->
                            <DataGridTemplateColumn Width="Auto">
                                <DataGridTemplateColumn.Header>
                                    <TextBlock Text="{Binding Path=Detector, Source={StaticResource Resources}}" Foreground="{StaticResource Brush10}" TextAlignment="Left"/>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="{StaticResource Brush02}"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="FontSize" Value="11"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        <Setter Property="Margin" Value="-5,0,5,2"/>
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="VerticalContentAlignment" Value="Bottom"/>
                                    </Style>
                                </DataGridTemplateColumn.HeaderStyle>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Border Grid.Row="3" Grid.Column="1" 
                                                    BorderBrush="{Binding NightDetectorResetIsValid, Converter={StaticResource InverseBoolToErrorBrushConverter}}" BorderThickness="1"
                                                    Visibility="{Binding IsPanelData, Converter={StaticResource InverseBoolToVisibilityConverter}}" 
                                                    Margin="0" Padding="2">
                                                <Grid HorizontalAlignment="Center" Width="34" Margin="0,0,0,0">
                                                    <TextBlock Text="{Binding NightDetectorResetTime}" HorizontalAlignment="Center" Visibility="{Binding ShowNightDetectorReset, Converter={StaticResource BoolToVisibilityHiddenConverter}}"/>
                                                    <TextBlock Text="-" HorizontalAlignment="Right" Visibility="{Binding ShowNightDetectorReset, Converter={StaticResource InverseBoolToVisibilityHiddenConverter}}" Margin="0,0,15,0"/>
                                                </Grid>
                                            </Border>
                                            <TextBlock Text="-" HorizontalAlignment="Right" Visibility="{Binding IsPanelData, Converter={StaticResource BoolToVisibilityConverter}}" Margin="0,0,22,0"/>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <!--#endregion-->

                            <!--#region night alarm reset-->
                            <DataGridTemplateColumn Width="Auto">
                                <DataGridTemplateColumn.Header>
                                    <TextBlock Text="{Binding Path=Alarm, Source={StaticResource Resources}}" Foreground="{StaticResource Brush10}" TextAlignment="Left"/>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="{StaticResource Brush02}"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="FontSize" Value="11"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        <Setter Property="Margin" Value="0,0,0,2"/>
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="VerticalContentAlignment" Value="Bottom"/>
                                    </Style>
                                </DataGridTemplateColumn.HeaderStyle>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Border Grid.Row="3" Grid.Column="1" 
                                                        BorderBrush="{Binding NightAlarmResetIsValid, Converter={StaticResource InverseBoolToErrorBrushConverter}}" BorderThickness="1"
                                                        Visibility="{Binding IsPanelData, Converter={StaticResource InverseBoolToVisibilityConverter}}" 
                                                        Margin="0" Padding="2">
                                                <Grid HorizontalAlignment="Center" Width="34" Margin="0,0,0,0">
                                                    <TextBlock Text="{Binding NightAlarmResetTime}" HorizontalAlignment="Right" Visibility="{Binding ShowNightAlarmReset, Converter={StaticResource BoolToVisibilityHiddenConverter}}"/>
                                                    <TextBlock Text="-" HorizontalAlignment="Right" Visibility="{Binding ShowNightAlarmReset, Converter={StaticResource InverseBoolToVisibilityHiddenConverter}}" Margin="0,0,15,0"/>
                                                </Grid>
                                            </Border>
                                            <TextBlock Text="-" HorizontalAlignment="Right" Visibility="{Binding IsPanelData, Converter={StaticResource BoolToVisibilityConverter}}" Margin="0,0,18,0"/>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <!--#endregion-->

                        </DataGrid.Columns>

                        <DataGrid.RowStyle>
                            <Style TargetType="{x:Type DataGridRow}">
                                <Setter Property="BorderThickness" Value="0" />
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="{StaticResource SelectedEquationBackground}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>

                        <DataGrid.CellStyle>
                            <Style TargetType="{x:Type DataGridCell}">
                                <Style.Triggers>
                                    <Trigger Property="DataGridCell.IsSelected" Value="True">
                                        <Setter Property="Background" Value="{StaticResource SelectedEquationBackground}" />
                                        <Setter Property="BorderBrush" Value="{StaticResource SelectedEquationBackground}" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.CellStyle>
                    </DataGrid>
                    <!--#endregion-->


                    <!--#region above-grid headings-->
                    <Grid Grid.Row="0" Grid.ColumnSpan="2" Margin="0,2,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="{Binding ZonesLeftHeaderWidth}"/>
                            <ColumnDefinition Width="{Binding ZonesOutputDelaysHeaderWidth}"/>
                            <ColumnDefinition Width="{Binding ZonesFunctioningWithHeaderWidth}"/>
                            <ColumnDefinition Width="{Binding Auto}"/>
                            <ColumnDefinition Width="{Binding ZonesDayDependenciesHeaderWidth}"/>
                            <ColumnDefinition Width="{Binding ZonesNightDependenciesHeaderWidth}"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="{Binding ZonesMultHeaderHeight}"/>
                            <RowDefinition Height="{Binding ZonesNormalHeaderHeight}"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                   Text="{Binding Path=Zones, Source={StaticResource Resources}}" 
                                   Foreground="{StaticResource Brush10}" 
                                   VerticalAlignment="Center"
                                   FontSize="14" FontWeight="Bold" Margin="12,0,0,0"/>

                        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical" VerticalAlignment="Bottom">
                            <TextBlock Text="{Binding Path=Output_Delays_Mins, Source={StaticResource Resources}}" 
                                       Foreground="{StaticResource Brush07}" Background="{StaticResource Brush02}" 
                                       TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Bottom"
                                       FontSize="11" Padding="3,0,3,0" Margin="0,0,0,0"/>
                            <Border BorderBrush="{StaticResource Brush04}" BorderThickness="1,1,1,0" CornerRadius="12,12,0,0" VerticalAlignment="Bottom" Height="6" Margin="0,0,2,4"/>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical" VerticalAlignment="Bottom">
                            <TextBlock Text="→" FontSize="18" FontFamily="Arial" 
                                       Foreground="{StaticResource Brush06}" 
                                       VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,0,7"/>
                        </StackPanel>
                    
                        <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Vertical" VerticalAlignment="Bottom">
                            <TextBlock Text="{Binding Path=Functioning_With, Source={StaticResource Resources}}" 
                                       Foreground="{StaticResource Brush07}" Background="{StaticResource Brush02}" 
                                       TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Bottom"
                                       FontSize="11" Padding="3,0,3,0" Margin="0,0,0,0"/>
                            <Border BorderBrush="{StaticResource Brush04}" BorderThickness="1,1,1,0" CornerRadius="12,12,0,0" VerticalAlignment="Bottom" Height="6" Margin="4,0,4,4"/>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="4" Orientation="Vertical" VerticalAlignment="Bottom">
                            <TextBlock Text="{Binding Path=Day_Dependencies, Source={StaticResource Resources}}" 
                                       Foreground="{StaticResource Brush07}" Background="{StaticResource Brush02}" 
                                       TextAlignment="Center" HorizontalAlignment="Center" 
                                       FontSize="11" Padding="3,0,3,0" Margin="0,0,0,0"/>
                            <Border BorderBrush="{StaticResource Brush04}" BorderThickness="1,1,1,0" CornerRadius="12,12,0,0" VerticalAlignment="Bottom" Height="6" Margin="-4,0,10,4"/>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="5" Orientation="Vertical" VerticalAlignment="Bottom">
                            <TextBlock Text="{Binding Path=Night_Dependencies, Source={StaticResource Resources}}" 
                                       Foreground="{StaticResource Brush07}" Background="{StaticResource Brush02}" 
                                       TextAlignment="Center" HorizontalAlignment="Center" 
                                       FontSize="11" Padding="3,0,3,0" Margin="0,0,0,0"/>
                            <Border BorderBrush="{StaticResource Brush04}" BorderThickness="1,1,1,0" CornerRadius="12,12,0,0" VerticalAlignment="Bottom" Height="6" Margin="6,0,6,4"/>
                        </StackPanel>

                    </Grid>
                    <!--#endregion-->

                </Grid>


                <!--#region right bar-->
                <WrapPanel Grid.Row="2" Grid.Column="2" Grid.RowSpan="2" Margin="10,5,0,0">
                    <local:ZoneInfoPanel x:Name="ctcInfoPanel"/>
                </WrapPanel>
                <!--#endregion-->

            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
